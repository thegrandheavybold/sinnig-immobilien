---
layout: layout/base.njk
---


<section class="hero lax">

  <picture>
    <source srcset="{{ featuredImage | url }}" media="(min-width: 769px)">
    <source srcset="{{ featuredImage | url }}?nf_resize=fit&w=1024" media="(min-width: 481px)">

    <img src="{{ featuredImage | url }}?nf_resize=fit&w=768" alt="{{ featuredImage }}" />
  </picture>

</section><!-- .hero -->

<section class="opener">

  <article class="posts">

    <div class="wrapper">

      <h2 data="fade-up">{{title}}</h2>
      <p data="fade-up delay">
        {{ content | safe }}
      </p>

    </div><!-- .wrapper -->

  </article><!-- article -->

</section>
